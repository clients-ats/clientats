{
  "productName": "ClientATS",
  "version": "1.0.0-alpha2",
  "identifier": "com.clientats.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "bash scripts/tauri/prepare-release.sh",
    "devUrl": "http://localhost:4000"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ClientATS - Job Scraping & Management",
        "width": 1280,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["phoenix"],
    "copyright": "Copyright (c) 2024 ClientATS Team",
    "category": "Productivity",
    "shortDescription": "Job Scraping & Management Platform",
    "longDescription": "A Phoenix-based application for intelligent job posting scraping, data extraction, and job interest tracking using multiple LLM providers.",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
